{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "dist",
    "rootDir": "src",
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "baseUrl": "src",
    "paths": { "@/*": ["*"] }
  },
  "include": ["src", "vitest.config.ts"],
  "exclude": [
  "**/*.test.ts",
  "**/*.spec.ts",
  "**/__tests__/**",
  "test/**"
]
}
